{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@@/*": [
        "./electron/*"
      ]
    }
  },
  "include": [
    "src",
    "auto-imports.d.ts"
  ],
  "references": [
    {
      "path": "./electron/"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
